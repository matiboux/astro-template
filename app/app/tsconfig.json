{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "/*": [ "*" ],
      "~/*": [ "src/*" ]
    }
  },
  "exclude": [
    "${configDir}/dist",
    "${configDir}/test",
    "${configDir}/playwright*.ts",
    "${configDir}/vitest*.ts",
    "${configDir}/**/*.test.ts",
    "${configDir}/**/*.spec.ts"
  ]
}
